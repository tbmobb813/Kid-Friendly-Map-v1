{
  "cli": {
    "version": ">= 3.30.0"
  },
  "build": {
    "development": {
      "developmentClient": true,
      "distribution": "internal",
      "android": {
        "buildType": "apk",
        "gradleCommand": ":app:assembleDebug",
        "prepare": {
          "beforeBuild": [
            "bash ./scripts/eas-ensure-android-toolchain.sh",
            "node ./scripts/generate-autolinking-json.cjs"
          ]
        }
      },
      "ios": {
        "simulator": true,
        "buildConfiguration": "Debug"
      }
    },
    "development-device": {
      "developmentClient": true,
      "distribution": "internal",
      "android": {
        "buildType": "apk",
        "gradleCommand": ":app:assembleDebug",
        "prepare": {
          "beforeBuild": [
            "bash ./scripts/eas-ensure-android-toolchain.sh",
            "node ./scripts/generate-autolinking-json.cjs"
          ]
        }
      },
      "ios": {
        "simulator": false,
        "buildConfiguration": "Debug"
      }
    },
    "preview": {
      "distribution": "internal",
      "android": {
        "buildType": "apk",
        "gradleCommand": ":app:assembleRelease",
        "prepare": {
          "beforeBuild": [
            "bash ./scripts/eas-ensure-android-toolchain.sh",
            "node ./scripts/generate-autolinking-json.cjs"
          ]
        }
      }
    },
    "production": {
      "android": {
        "buildType": "app-bundle",
        "prepare": {
          "beforeBuild": [
            "bash ./scripts/eas-ensure-android-toolchain.sh",
            "node ./scripts/generate-autolinking-json.cjs"
          ]
        }
      }
    }
  },
  "submit": {
    "production": {}
  }
}
