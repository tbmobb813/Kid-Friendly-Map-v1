{
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": false,
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "types": [
      "jest",
      "node",
      "react",
      "react-native"
    ],
    "lib": [
      "ES2020",
      "DOM"
    ],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./*"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "templates/**",
    "bun-tests/**"
  ],
  "extends": "expo/tsconfig.base"
}
